<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/margin_avg"
        android:alpha="1"
        android:gravity="start"
        android:paddingEnd="@dimen/padding_avg"
        android:paddingStart="@dimen/padding_avg"
        android:text="@string/onboard_authentication_alternate_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:translationX="@dimen/onboard_translation_x" />

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_title"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/margin_small"
        android:alpha="0"
        android:gravity="start"
        android:paddingEnd="@dimen/padding_avg"
        android:paddingStart="@dimen/padding_avg"
        android:text="@string/onboard_authentication_desc"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:translationX="@dimen/onboard_translation_x" />

    <Button
        android:id="@+id/button_continue_as_regular_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_description"
        android:layout_marginEnd="@dimen/margin_avg"
        android:layout_marginStart="@dimen/margin_avg"
        android:layout_marginTop="@dimen/margin_large"
        android:alpha="0"
        android:gravity="center"
        android:text="@string/onboard_continue"
        android:theme="@style/DarkButton" />

    <Button
        android:id="@+id/button_continue_as_registered_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_continue_as_regular_user"
        android:layout_marginEnd="@dimen/margin_avg"
        android:layout_marginStart="@dimen/margin_avg"
        android:layout_marginTop="@dimen/margin_small"
        android:alpha="0"
        android:gravity="center"
        android:text="@string/continue_as_registered_user"
        android:theme="@style/DarkButton"
        android:visibility="gone" />

</merge>