<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlHighlight">@color/color_accent</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="android:textColorTertiary">@color/text_color_tertiary</item>
        <item name="android:textColorPrimaryInverse">@color/text_color_primary_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/text_color_secondary_inverse</item>
        <item name="android:textColorTertiaryInverse">@color/text_color_tertiary_inverse</item>
        <item name="android:textAppearanceLarge">@style/TextAppearanceLarge</item>
        <item name="android:textAppearanceMedium">@style/TextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearanceSmall</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

    <style name="AppTheme.Dashboard">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/ll_app_logo</item>
    </style>

    <style name="AppTheme.Onboard">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/ll_app_logo</item>
    </style>

    <style name="AppTheme.PostDetails">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.CollectionDetails">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

    <style name="AppTheme.MediaFullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.Settings">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.About">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/ll_app_logo</item>
    </style>

    <style name="DialogActivity" parent="Theme.AppCompat.Light.Dialog"></style>

    <style name="DialogActivity.NoTitle" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">@color/color_accent</item>
        <item name="android:textColorSecondary">@color/color_black_dark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DarkButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/color_primary_dark</item>
        <item name="colorButtonNormal">@color/color_black_dark</item>
        <item name="android:textColorPrimary">@color/material_grey_200</item>
    </style>

    <style name="TextAppearanceLarge" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/color_black_dark</item>
    </style>

    <style name="TextAppearanceMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/color_black_dark</item>
    </style>

    <style name="TextAppearanceSmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/color_black_dark</item>
    </style>

    <style name="TextAppearanceDate" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearancePostTitle" parent="TextAppearanceLarge">
        <item name="android:textColor">@color/color_black_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearancePostDesc" parent="TextAppearanceMedium">
        <item name="android:textColor">@color/material_grey_700</item>
    </style>

    <style name="TextAppearancePostDate" parent="TextAppearanceSmall">
        <item name="android:textColor">@color/material_grey_400</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="TextAppearanceComment" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/material_grey_700</item>
    </style>

    <style name="TextAppearanceCollectionTitle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/color_black_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceCollectionDesc" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/material_grey_700</item>
    </style>

    <style name="TextAppearanceCollectionDetailTitle" parent="TextAppearanceLarge">
        <item name="android:textColor">@color/color_black_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceCollectionDetailDesc" parent="TextAppearanceMedium">
        <item name="android:textColor">@color/material_grey_700</item>
    </style>

    <style name="TextAppearanceAboutTitle" parent="TextAppearanceLarge">
        <item name="android:textColor">@color/color_black_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceAboutDesc" parent="TextAppearanceMedium">
        <item name="android:textColor">@color/material_grey_700</item>
    </style>

    <style name="TextAppearanceAboutVersion" parent="TextAppearanceSmall">
        <item name="android:textColor">@color/material_grey_400</item>
    </style>

    <style name="TextAppearanceMediaImageNumber" parent="TextAppearanceMedium">
        <item name="android:textColor">@color/material_grey_200</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediaTypeTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_grey_200</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:background">@drawable/bg_rect_dark_black_rounded</item>
    </style>

    <style name="TextAppearanceLibraryName" parent="TextAppearanceMedium">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="TextAppearanceLibraryCreator" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/color_black_dark</item>
    </style>

    <style name="TextAppearanceLibraryLicense" parent="TextAppearanceSmall">
        <item name="android:textColor">@color/material_grey_400</item>
    </style>

    <style name="TextAppearanceWidgetPostTitle" parent="TextAppearanceMedium">
        <item name="android:textColor">@color/material_grey_200</item>
    </style>

    <style name="TextAppearanceWidgetPostDesc" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/material_grey_400</item>
    </style>

</resources>
